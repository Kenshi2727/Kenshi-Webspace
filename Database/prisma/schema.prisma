generator client {
  // Required
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // DEPRECATED SINCE V7 but currently under use
}

model User {
  id        String   @id @default(uuid())
  firstName String
  lastName  String
  email     String   @unique
  role      Role     @default(USER)
  tagline   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Posts     Post[]
  likes     Like[]
}

enum Role {
  OWNER // Supreme power
  MODERATOR // Can appoint/demote Admins, manage space
  ADMIN // Reviews posts, cannot demote Admins
  COLLABORATOR // Default contributor/member
  USER // Regular user with limited permissions
}

model Like {
  id        String   @id @default(uuid())
  userId    String
  postId    String
  status    Boolean  @default(false) // true = liked, false = unliked  
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, postId]) // Ensure a user can like a post only once
}

model Post {
  id              String   @id @default(uuid())
  title           String
  excerpt         String
  category        String
  readTime        Int
  content         String
  authorId        String
  author          User     @relation(fields: [authorId], references: [id])
  thumbnail       String?
  authorImage     String?
  coverImage      String?
  trending        Boolean  @default(false)
  featured        Boolean  @default(false)
  likes           Int      @default(0)
  views           Int      @default(0)
  referenceStatus Boolean  @default(false) // Whether the post has an associated ServiceRef
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  Likes           Like[]

  @@unique([id, authorId]) // Composite primary key
}

model MediaMetaData {
  id           Int         @id @default(autoincrement())
  publicId     String      @unique // Cloudinary public_id (required for deletion)
  mediaType    MediaType
  serviceRefId String?
  serviceRef   ServiceRef? @relation(fields: [serviceRefId], references: [id])
  userId       String? // Author/owner ID
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
}

enum MediaType {
  IMAGE
  VIDEO
}

enum ServiceType {
  POST
  PROFILE
}

model ServiceRef {
  id        String          @id
  type      ServiceType // e.g. "POST", "PROFILE"
  media     MediaMetaData[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt // manual updation required becoz of custom nature of ServiceRef ID
}
